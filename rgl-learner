#!/usr/bin/env python3

import sys
import rgl_learner.plugins
import rgl_learner.morpho_cats
import rgl_learner.unimorph

if len(sys.argv) == 3 and (sys.argv[1] == "wiktionary" or sys.argv[1] == "unimorph"):
    rgl_learner.plugins[sys.argv[1]].extract(sys.argv[2])
elif len(sys.argv) == 4 and sys.argv[1] == "morpho-cats":
    rgl_learner.morpho_cats.learn(sys.argv[2],sys.argv[3])
else:
    print(f"Synopsis: {sys.argv[0]} <wiktionary|unimorph>  <lang-code>")
    print(f"          {sys.argv[0]} morpho-cats <wiktionary|unimorph> <lang-code>")
